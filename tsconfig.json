{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "lib": ["es2019"]
  },
  "include": ["src/credentials/**/*", "src/nodes/**/*"],
  "exclude": [
    "node_modules/**/*", 
    "dist/**/*",
    "tests/**/*"
  ]
}
